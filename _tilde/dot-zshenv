# System
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export EDITOR=nvim
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# ZSH
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"   # Keep zsh files in ~/.config
setopt HIST_SAVE_NO_DUPS                # Do not write a duplicate event to the history file.
export HISTFILE="$ZDOTDIR/.zhistory"    # History filepath
export HISTSIZE=10000                   # Maximum events for internal history
export SAVEHIST=10000                   # Maximum events in history file

# Specify config paths to use XDG_CONFIG_HOME
export PSQLRC="$XDG_CONFIG_HOME/psql/config"
export RIPGREP_CONFIG_PATH="$XDG_CONFIG_HOME/ripgrep/config"

# PATHs
export PATH="./node_modules/.bin:$PATH" # Local node_modules binaries
export PATH="$HOME/.bin:$PATH"          # Local binaries
export PATH="/usr/local/sbin:$PATH"     # Homebrew binaries (if installed)
